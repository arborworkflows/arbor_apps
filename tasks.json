    "container_args": [
      "ancestral_state",
      "$input{tree}",
      "$input{table}",
      "$input{column}",
      "$output{output}",
      "$output{plot}"
    ],
    "inputs": [
      {
        "description": "",
        "id": "tree",
        "name": "Tree",
        "required": true,
        "target": "filepath",
        "type": "file"
      },
      {
        "description": "",
        "id": "table",
        "name": "Character matrix",
        "required": true,
        "target": "filepath",
        "type": "file"
      },
      {
        "description": "",
        "id": "column",
        "name": "The trait to analyze",
        "required": true,
        "type": "string"
      }
